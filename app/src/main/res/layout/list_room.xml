<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:layout_margin="10dp"
    android:padding="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_tv_roomName"
        android:text="Room Name"
        android:textSize="24sp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Type: "
        android:layout_below="@+id/list_tv_roomName"
        android:id="@+id/list_tv_access_type_label"
        />
    <TextView
        android:id="@+id/list_tv_access_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:layout_toRightOf="@+id/list_tv_access_type_label"
        android:layout_below="@+id/list_tv_roomName"
        />

</RelativeLayout>