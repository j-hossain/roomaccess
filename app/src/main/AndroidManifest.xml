<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roomaccess">

    <uses-permission android:name="android.permission.CAMERA" /> <!-- permissions for internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoomAccess">
        <activity
            android:name=".act_createRoom"
            android:exported="false" />
        <activity
            android:name=".MyRooms"
            android:exported="false" />
        <activity
            android:name=".userRoomAccess"
            android:exported="false" />
        <activity
            android:name=".Starter"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".userRegister"
            android:exported="false" />
        <activity
            android:name=".userLogin"
            android:exported="false" />
        <activity
            android:name=".useraccess"
            android:exported="false" />
        <activity
            android:name=".act_qrscanner"
            android:exported="false" />
        <activity
            android:name=".Home"
            android:exported="false" />
    </application>

</manifest>